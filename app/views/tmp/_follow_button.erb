<% if user_signed_in? then %>
    <% if @currentUser != @userDetail %>
        <% unless current_user == user %>
          <% if current_user.following?(user) %>
            <%= form_for(current_user.relationships.find_by(follow_id: user.id), html: { method: :delete }) do |f| %>
              <%= hidden_field_tag :follow_id, user.id %>
              <%= f.submit 'Unfollow', class: 'btn btn-danger btn-block' ,id: "follow" %>
              <a class="linkBox dc" onClick="$('#follow').click()">フォローを解除</a>
            <% end %>
          <% else %>
            <%= form_for(current_user.relationships.build) do |f| %>
              <%= hidden_field_tag :follow_id, user.id %>
              <%= f.submit 'Follow', class: 'btn btn-primary btn-block' ,id: "follow"%>
              <a class="linkBox dc" onClick="$('#follow').click()">フォロー</a>
            <% end %>
          <% end %>
        <% end %>
    <% else %>
        
    <% end %>
<% end %>
