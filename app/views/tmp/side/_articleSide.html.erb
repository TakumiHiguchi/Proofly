		                        credentials: Aws::Credentials.new(
		                          ENV['S3_ACCESS_KEY'],
		                          ENV['S3_SECRET_KEY']
		                        )
		                      )
		                      signer = Aws::S3::Presigner.new(client: s3.client)
		                      passw = "uploads/article/thum/#{pass.thum.to_s}"
